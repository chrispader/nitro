{
  "name": "react-native-nitro",
  "packageManager": "bun@1.1.21",
  "private": true,
  "version": "0.13.0",
  "repository": "https://github.com/mrousavy/nitro.git",
  "author": "Marc Rousavy <me@mrousavy.com> (https://github.com/mrousavy)",
  "workspaces": [
    "packages/*",
    "example",
    "docs"
  ],
  "scripts": {
    "modules": "bun --cwd package/react-native-nitro-modules",
    "nitrogen": "bun --cwd package/nitrogen",
    "image": "bun --cwd package/react-native-nitro-image",
    "example": "bun --cwd example",
    "bootstrap": "bun --filter=\"**\" install && bun tsc && bun example pods",
    "check-all": "./scripts/clang-format.sh",
    "typecheck": "bun --filter=\"**\" typecheck",
    "lint": "bun --filter=\"**\" lint",
    "clean": "rm -rf packages/**/tsconfig.tsbuildinfo packages/**/node_modules packages/**/lib",
    "release": "bun modules prepare && bun nitrogen prepare && release-it"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@jamesacarr/eslint-formatter-github-actions": "^0.2.0",
    "@react-native/eslint-config": "0.75.2",
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^8.0.2",
    "@tsconfig/react-native": "^2.0.2",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "eslint": "8.57.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "typescript-eslint": "^8.6.0"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "packages/react-native-nitro-modules/package.json",
            "path": "version"
          },
          {
            "file": "packages/nitrogen/package.json",
            "path": "version"
          },
          {
            "file": "packages/react-native-nitro-image/package.json",
            "path": "version"
          },
          {
            "file": "example/package.json",
            "path": "version"
          }
        ]
      },
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  }
}
